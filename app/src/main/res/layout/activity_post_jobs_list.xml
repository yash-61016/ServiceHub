<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:id="@+id/SP_MS_PJ_job"
        android:layout_width="360dp"
        android:layout_height="198dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/sp_jobs_active"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:alpha="0.5"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/SP_MS_PJ_profilepic"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/animoji"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toStartOf="@+id/SP_MS_PJ_job"
        app:layout_constraintTop_toTopOf="@+id/SP_MS_PJ_job"
        android:alpha="0.5"/>

    <TextView
        android:id="@+id/SP_MS_PJ_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Name"
        android:fontFamily="@font/bold"
        android:textSize="18sp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/SP_MS_PJ_job"
        app:layout_constraintHorizontal_bias="0.071"
        app:layout_constraintStart_toEndOf="@+id/SP_MS_PJ_profilepic"
        app:layout_constraintTop_toTopOf="@+id/SP_MS_PJ_job"
        android:alpha="0.5"/>

    <TextView
        android:id="@+id/SP_MS_PJ_jobname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Job Name"
        android:textColor="@color/white"
        android:textSize="22dp"
        app:layout_constraintBottom_toBottomOf="@+id/SP_MS_PJ_job"
        app:layout_constraintEnd_toEndOf="@+id/SP_MS_PJ_job"
        app:layout_constraintStart_toStartOf="@+id/SP_MS_PJ_job"
        app:layout_constraintTop_toTopOf="@+id/SP_MS_PJ_job"
        android:alpha="0.5"/>

    <TextView
        android:id="@+id/SP_MS_PJ_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dd/mm/yyyy  hh:mm"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/SP_MS_PJ_job"
        app:layout_constraintEnd_toEndOf="@+id/SP_MS_PJ_job"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/SP_MS_PJ_job"
        app:layout_constraintTop_toBottomOf="@+id/SP_MS_PJ_jobname"
        app:layout_constraintVertical_bias="0.421"
        android:alpha="0.5"/>
</androidx.constraintlayout.widget.ConstraintLayout>