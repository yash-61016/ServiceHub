<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signup_bg"
    tools:context=".ServiceProviderNewAccount">

    <TextView

        android:id="@+id/signupasSP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/bold"
        android:text="@string/sign_up_as_service_provider"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/SP_CA_SP_CA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/medium"
        android:text="@string/create_account"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signupasSP" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/SP_CA_LastName"
        android:layout_width="155dp"
        android:layout_height="37dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="44dp"
        android:background="@drawable/textboxes"
        android:fontFamily="@font/medium"
        android:hint="LAST-NAME*"
        android:textColor="@color/black"
        android:textColorHint="@color/Grey"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/SP_CA_FirstName"
        app:layout_constraintTop_toBottomOf="@+id/SP_CA_SP_CA" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/SP_CA_FirstName"
        android:layout_width="155dp"
        android:layout_height="37dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/textboxes"
        android:fontFamily="@font/medium"
        android:hint="FIRST-NAME*"
        android:textColor="@color/black"
        android:textColorHint="@color/Grey"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/SP_CA_Email"
        app:layout_constraintEnd_toStartOf="@+id/SP_CA_LastName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SP_CA_SP_CA" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/SP_CA_number"
        android:layout_width="271dp"
        android:layout_height="37dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="80dp"
        android:background="@drawable/textboxes"
        android:fontFamily="@font/medium"
        android:hint="MOBILE-NO.*"
        android:textColor="@color/black"
        android:textColorHint="@color/Grey"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SP_CA_Email" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/SP_CA_Address"
        android:layout_width="355dp"
        android:layout_height="37dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/textboxes"
        android:fontFamily="@font/medium"
        android:hint="ADDRESS*"
        android:textColor="@color/black"
        android:textColorHint="@color/Grey"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SP_CA_number" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/SP_CA_Postcode"
        android:layout_width="177dp"
        android:layout_height="37dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/textboxes"
        android:fontFamily="@font/medium"
        android:hint="POSTCODE*"
        android:textColor="@color/black"
        android:textColorHint="@color/Grey"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.128"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SP_CA_Address" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/SP_CA_Password"
        android:layout_width="346dp"
        android:layout_height="37dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/textboxes"
        android:ems="10"
        android:fontFamily="@font/medium"
        android:hint="PASSWORD*"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textColorHint="@color/Grey"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SP_CA_Postcode" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/SP_CA_VerifyPassword"
        android:layout_width="343dp"
        android:layout_height="42dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/textboxes"
        android:ems="10"
        android:fontFamily="@font/medium"
        android:hint="VERIFY-PASSWORD*"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textColorHint="@color/Grey"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SP_CA_Password" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/SP_CA_Email"
        android:layout_width="350dp"
        android:layout_height="37dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/textboxes"
        android:fontFamily="@font/medium"
        android:hint="EMAIL*"
        android:textColor="@color/black"
        android:textColorHint="@color/Grey"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SP_CA_FirstName" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/SP_CA_AccountNO"
        android:layout_width="177dp"
        android:layout_height="37dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="1350dp"
        android:background="@drawable/textboxes"
        android:fontFamily="@font/medium"
        android:hint="Bank Account Number"
        android:textColor="@color/black"
        android:textColorHint="@color/Grey"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SP_CA_VerifyPassword" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/SP_CA_SortCode"
        android:layout_width="177dp"
        android:layout_height="37dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="38dp"
        android:background="@drawable/textboxes"
        android:fontFamily="@font/medium"
        android:hint="Sort Code"
        android:textColor="@color/black"
        android:textColorHint="@color/Grey"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/SP_CA_LoginInbt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.123"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SP_CA_AccountNO" />

    <Button
        android:id="@+id/SP_CA_Donebt"
        android:layout_width="272dp"
        android:layout_height="48dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="136dp"
        android:layout_marginEnd="108dp"
        android:background="@drawable/button"
        android:fontFamily="@font/medium"
        android:gravity="center"
        android:text="Done"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SP_CA_VerifyPassword" />

    <TextView
        android:id="@+id/Sp_CreateAc"
        android:layout_width="222dp"
        android:layout_height="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="112dp"
        android:fontFamily="@font/bold"
        android:text="Already Registered? Login Here!"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SP_CA_LoginInbt" />

</androidx.constraintlayout.widget.ConstraintLayout>
