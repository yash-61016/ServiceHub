<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".User_Details">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="49dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title"
                android:layout_width="400dp"
                android:layout_height="80dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="27dp"
                android:fontFamily="@font/bold"
                android:gravity="center"
                android:text="Details"
                android:textColor="@color/white"
                android:textSize="35sp"
                app:layout_constraintBottom_toTopOf="@+id/User_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/User_name"
                android:layout_width="181dp"
                android:layout_height="65dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="60dp"
                android:hint="Joe Mathew"
                android:textColor="@color/white"
                android:textSize="27sp"
                app:layout_constraintBottom_toTopOf="@+id/User_email"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_profilepic"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="36dp"
                android:src="@drawable/avatar"
                app:civ_border_color="@color/green"
                app:civ_border_width="5sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/User_name"
                app:layout_constraintTop_toBottomOf="@+id/title" />


            <TextView
                android:id="@+id/User_email"
                android:layout_width="128dp"
                android:layout_height="52dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="98dp"
                android:layout_marginEnd="193dp"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/medium"
                android:paddingStart="15dp"
                android:text="Email"
                android:textColor="@color/white"
                android:textSize="30dp"
                app:layout_constraintBottom_toTopOf="@+id/User_emailchange"
                app:layout_constraintEnd_toStartOf="@+id/imageButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/User_name" />

            <TextView
                android:id="@+id/User_emailchange"
                android:layout_width="250dp"
                android:layout_height="35dp"
                android:layout_marginStart="23dp"
                android:layout_marginTop="4dp"
                android:hint="jatinaneja2000@gmail.com"
                android:paddingStart="10dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/User_number"
                app:layout_constraintEnd_toStartOf="@+id/imageButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/User_email" />

            <TextView
                android:id="@+id/User_number"
                android:layout_width="128dp"
                android:layout_height="52dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="193dp"
                android:layout_marginBottom="1dp"
                android:fontFamily="@font/medium"
                android:paddingStart="15dp"
                android:text="Number"
                android:textColor="@color/white"
                android:textSize="30dp"
                app:layout_constraintBottom_toTopOf="@+id/User_numberchange"
                app:layout_constraintEnd_toStartOf="@+id/imageButton2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/User_emailchange"
                app:layout_editor_absoluteX="20dp" />

            <TextView
                android:id="@+id/User_numberchange"
                android:layout_width="241dp"
                android:layout_height="42dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="1dp"
                android:hint="7388307668"
                android:paddingStart="15dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/User_Address"
                app:layout_constraintEnd_toStartOf="@+id/imageButton2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/User_number"
                app:layout_editor_absoluteX="20dp"
                app:layout_editor_absoluteY="480dp" />

            <TextView
                android:id="@+id/User_Address"
                android:layout_width="128dp"
                android:layout_height="52dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="284dp"
                android:fontFamily="@font/medium"
                android:paddingStart="15dp"
                android:text="Address"
                android:textColor="@color/white"
                android:textSize="30dp"
                app:layout_constraintBottom_toTopOf="@+id/User_addresschange"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/User_numberchange"
                app:layout_editor_absoluteX="20dp" />

            <TextView
                android:id="@+id/User_addresschange"
                android:layout_width="241dp"
                android:layout_height="53dp"
                android:layout_marginStart="20dp"
                android:hint="7 Holly Street Middlesbrough TS12EW"
                android:paddingStart="15dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/User_password"
                app:layout_constraintEnd_toStartOf="@+id/imageButton3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/User_Address"
                app:layout_editor_absoluteX="20dp"
                app:layout_editor_absoluteY="560dp" />


            <TextView
                android:id="@+id/User_password"
                android:layout_width="156dp"
                android:layout_height="52dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="165dp"
                android:fontFamily="@font/medium"
                android:paddingStart="15dp"
                android:text="Password"
                android:textColor="@color/white"
                android:textSize="30dp"
                app:layout_constraintBottom_toTopOf="@+id/User_passwordchange"
                app:layout_constraintEnd_toStartOf="@+id/imageButton4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/User_addresschange"
                app:layout_editor_absoluteX="20dp"
                app:layout_editor_absoluteY="616dp" />

            <TextView
                android:id="@+id/User_passwordchange"
                android:layout_width="199dp"
                android:layout_height="45dp"
                android:layout_marginStart="20dp"
                android:hint="**********"
                android:inputType="textPassword"
                android:paddingStart="15dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imageButton4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/User_password"
                app:layout_editor_absoluteX="20dp"
                app:layout_editor_absoluteY="655dp" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="67dp"
                android:layout_marginTop="123dp"
                android:layout_marginEnd="51dp"
                android:background="@color/blue"
                android:src="@drawable/imagechange2_foreground"
                app:layout_constraintBottom_toTopOf="@+id/imageButton2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/User_emailchange"
                app:layout_constraintTop_toBottomOf="@+id/user_profilepic" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="80dp"
                android:layout_marginTop="57dp"
                android:layout_marginEnd="51dp"
                android:background="@color/blue"
                android:src="@drawable/imagechange2_foreground"
                app:layout_constraintBottom_toTopOf="@+id/imageButton3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/User_numberchange"
                app:layout_constraintTop_toBottomOf="@+id/imageButton" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="80dp"
                android:layout_marginTop="62dp"
                android:layout_marginEnd="51dp"
                android:layout_marginBottom="60dp"
                android:background="@color/blue"
                android:src="@drawable/imagechange2_foreground"
                app:layout_constraintBottom_toTopOf="@+id/imageButton4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/User_addresschange"
                app:layout_constraintTop_toBottomOf="@+id/imageButton2" />

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="122dp"
                android:layout_marginEnd="51dp"
                android:layout_marginBottom="10dp"
                android:background="@color/blue"
                android:src="@drawable/imagechange2_foreground"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/User_passwordchange"
                app:layout_constraintTop_toBottomOf="@+id/imageButton3" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>