<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome_bg"
    tools:context=".ServiceProviderLogin2">

    <TextView
        android:id="@+id/SP_SPL2signInAsA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="53dp"
        android:fontFamily="@font/bold"
        android:text="Login as a"
        android:textColor="@color/white"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/SP_SPL2asASP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bold"
        android:text="Service Provider"
        android:textColor="@color/white"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SP_SPL2signInAsA" />

    <TextView
        android:id="@+id/SP_SPL2username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="192dp"
        android:layout_marginEnd="253dp"
        android:fontFamily="@font/regular"
        android:text="Username"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SP_SPL2asASP" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/SP_SPL2loginTXT"
        android:layout_width="352dp"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/regular"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SP_SPL2username" />

    <TextView
        android:id="@+id/SP_SPL2password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="253dp"
        android:fontFamily="@font/regular"
        android:text="Password"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SP_SPL2loginTXT" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/SP_SPL2passwordTXT"
        android:layout_width="352dp"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/regular"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SP_SPL2password" />

    <Button
        android:id="@+id/SP_SPL2Skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="40dp"
        android:alpha="0.5"
        android:background="@color/blue"
        android:fontFamily="@font/medium"
        android:text="Skip"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SP_SPL2passwordTXT" />

    <Button
        android:id="@+id/SP_SPL2login"
        android:layout_width="154dp"
        android:layout_height="48dp"
        android:layout_marginStart="111dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/button"
        android:fontFamily="@font/medium"
        android:gravity="center"
        android:text="Login"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@+id/SP_SPL2Skip"
        app:layout_constraintTop_toBottomOf="@+id/SP_SPL2passwordTXT" />

    <TextView
        android:id="@+id/Sp_LoginAc"
        android:layout_width="217dp"
        android:layout_height="21dp"
        android:layout_marginTop="21dp"
        android:layout_marginBottom="98dp"
        android:fontFamily="@font/bold"
        android:paddingHorizontal="10dp"
        android:text="New Here? Create Account!"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SP_SPL2Skip" />


</androidx.constraintlayout.widget.ConstraintLayout>