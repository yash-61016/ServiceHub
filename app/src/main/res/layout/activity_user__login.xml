<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome_bg"
    tools:context=".User_Login">

    <TextView
        android:id="@+id/UserLoginTitle1"
        android:layout_width="328dp"
        android:layout_height="67dp"
        android:layout_marginTop="53dp"
        android:fontFamily="@font/bold"
        android:text="   Login in as a"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/UserLoginTitle2"
        android:layout_width="228dp"
        android:layout_height="56dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="37dp"
        android:fontFamily="@font/bold"
        android:text="   User"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UserLoginTitle1" />

    <TextView
        android:id="@+id/U_L_username"
        android:layout_width="352dp"
        android:layout_height="29dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="244dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/medium"
        android:text="UserName"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/U_L_loginid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UserLoginTitle2" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/U_L_loginid"
        android:layout_width="351dp"
        android:layout_height="50dp"
        android:layout_marginBottom="2dp"
        android:fontFamily="@font/medium"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/U_L_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/U_L_username" />

    <TextView
        android:id="@+id/U_L_password"
        android:layout_width="352dp"
        android:layout_height="29dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="1dp"
        android:fontFamily="@font/medium"
        android:text="Password"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/U_L_passwordenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/U_L_loginid" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/U_L_passwordenter"
        android:layout_width="350dp"
        android:layout_height="43dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="35dp"
        android:fontFamily="@font/medium"
        android:inputType="textPassword"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/U_L_LoginInbt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/U_L_password" />

    <Button
        android:id="@+id/U_L_LoginInbt"
        android:layout_width="152dp"
        android:layout_height="48dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/button"
        android:fontFamily="@font/medium"
        android:gravity="center"
        android:text="LOGIN"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/U_LoginAc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.857"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/U_L_passwordenter" />


    <Button
        android:id="@+id/U_L_skipbt"
        android:layout_width="152dp"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="9dp"
        android:alpha="0.5"
        android:background="@drawable/skipbt"
        android:fontFamily="@font/medium"
        android:text="SKIP"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/U_LoginAc"
        app:layout_constraintEnd_toStartOf="@+id/U_L_LoginInbt"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/U_L_passwordenter" />

    <TextView
        android:id="@+id/U_LoginAc"
        android:layout_width="217dp"
        android:layout_height="21dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="2dp"
        android:fontFamily="@font/bold"
        android:paddingHorizontal="10dp"
        android:text="New Here? Create Account!"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/U_L_ForgetPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/U_L_LoginInbt" />

    <TextView
        android:id="@+id/U_L_ForgetPassword"
        android:layout_width="145dp"
        android:layout_height="23dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="71dp"
        android:fontFamily="@font/bold"
        android:paddingHorizontal="10dp"
        android:text="Forget Password?"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/U_LoginAc" />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>