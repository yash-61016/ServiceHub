<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".U_MainScreen">


    <Button
        android:id="@+id/U_Ms_Menubt"
        android:layout_width="50dp"
        android:layout_height="37dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="86dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/menubtn"
        app:layout_constraintBottom_toTopOf="@+id/U_Ms_name"
        app:layout_constraintEnd_toStartOf="@+id/profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="211dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="41dp"
        android:padding="10dp"
        android:src="@drawable/avatar"
        android:visibility="visible"
        app:civ_border_color="@color/green"
        app:civ_border_width="4dp"
        app:layout_constraintBottom_toTopOf="@+id/U_Ms_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/U_Ms_Menubt"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/U_Ms_name"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="266dp"
        android:fontFamily="@font/bold"
        android:hint="Hey Joe,"
        android:textColor="@color/black"
        android:textColorHint="@color/Grey"
        android:textSize="26sp"
        app:layout_constraintBottom_toTopOf="@+id/U_Ms_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/U_Ms_Menubt" />

    <TextView
        android:id="@+id/U_Ms_title"
        android:layout_width="350dp"
        android:layout_height="23dp"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="66dp"
        android:alpha="0.5"
        android:fontFamily="@font/bold"
        android:text="Choose what would you like to get done today,"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/U_Ms_search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/U_Ms_name" />


    <EditText
        android:id="@+id/U_Ms_search"
        android:layout_width="275dp"
        android:layout_height="49dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/search_layout"
        android:ems="10"
        android:fontFamily="@font/bold"
        android:hint="Search here"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:textColor="#999999"
        android:textColorHint="@color/Grey"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/Scroll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.089"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/U_Ms_title" />


    <ImageButton
        android:id="@+id/search_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="67dp"
        android:layout_marginBottom="42dp"
        android:background="@android:color/background_light"
        app:layout_constraintBottom_toTopOf="@+id/Scroll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/U_Ms_search"
        app:layout_constraintTop_toBottomOf="@+id/U_Ms_title"
        app:srcCompat="@mipmap/search_button" />

    <androidx.recyclerview.widget.RecyclerView
        android:clickable="true"
        android:id="@+id/result_list"
        android:layout_width="429dp"
        android:layout_height="552dp"
        android:visibility="invisible"
        android:layout_marginStart="3dp"
        android:layout_marginTop="17dp"
        android:isScrollContainer="false"
        tools:listitem="@layout/list_layout"
        app:layout_constraintTop_toTopOf="@id/Scroll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/U_Ms_search" />


    <ScrollView
        android:id="@+id/Scroll"
        style="@android:style/Widget.DeviceDefault.ScrollView"
        android:layout_width="418dp"
        android:layout_height="533dp"
        android:layout_marginStart="4dp"
        android:isScrollContainer="false"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="4dp"
        android:clipToPadding="true"
        android:fillViewport="true"
        android:scrollY="400dp"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarFadeDuration="5"
        android:scrollbarStyle="insideOverlay"
        android:scrollbars="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/U_Ms_search"
        app:layout_constraintVertical_bias="0.0"
        tools:visibility="visible">

        <LinearLayout

            android:id="@+id/layout_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <Button
                android:id="@+id/U_Ms_houseServices"
                android:layout_width="188dp"
                android:layout_height="212dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="18dp"
                android:background="@drawable/homeservices" />

            <Button
                android:id="@+id/U_Ms_ElectronicRepairs"
                android:layout_width="188dp"
                android:layout_height="212dp"
                android:layout_marginStart="204dp"
                android:layout_marginTop="-190dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="18dp"
                android:background="@drawable/electronicrepairs" />

            <Button
                android:id="@+id/U_Ms_PersonalGrooming"
                android:layout_width="188dp"
                android:layout_height="220dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="-60dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="18dp"
                android:background="@drawable/personalservices" />

            <Button
                android:id="@+id/U_Ms_Health"
                android:layout_width="188dp"
                android:layout_height="220dp"
                android:layout_marginStart="204dp"
                android:layout_marginTop="-190dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="18dp"
                android:background="@drawable/healthservices" />

            <Button
                android:id="@+id/U_Ms_PartyandEvents"
                android:layout_width="188dp"
                android:layout_height="220dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="-60dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="18dp"
                android:background="@drawable/partyandevent" />

            <Button
                android:id="@+id/U_Ms_MoversandShifters"
                android:layout_width="188dp"
                android:layout_height="220dp"
                android:layout_marginStart="204dp"
                android:layout_marginTop="-190dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="18dp"
                android:background="@drawable/moversandshifters" />


        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>