<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".User_Details">

    <ScrollView
        android:layout_width="434dp"
        android:layout_height="747dp"
        android:layout_marginBottom="49dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.705">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title"
                android:layout_width="400dp"
                android:layout_height="80dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="27dp"
                android:fontFamily="@font/bold"
                android:gravity="center"
                android:text="Details"
                android:textColor="@color/white"
                android:textSize="35sp"
                app:layout_constraintBottom_toTopOf="@+id/User_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/User_name"
                android:layout_width="181dp"
                android:layout_height="65dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="60dp"
                android:hint="Joe Mathew"
                android:textColor="@color/white"
                android:textSize="27sp"
                app:layout_constraintBottom_toTopOf="@+id/User_email"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/User_profilepic"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="22dp"
                android:layout_marginEnd="36dp"
                android:src="@drawable/avatar"
                app:civ_border_color="@color/green"
                app:civ_border_width="5sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/User_name"
                app:layout_constraintTop_toBottomOf="@+id/title" />


            <TextView
                android:id="@+id/User_email"
                android:layout_width="128dp"
                android:layout_height="52dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="78dp"
                android:layout_marginEnd="286dp"
                android:layout_marginBottom="4dp"
                android:alpha="0.7"
                android:fontFamily="@font/medium"
                android:paddingStart="15dp"
                android:text="Email"
                android:textColor="@color/white"
                android:textSize="30dp"
                app:layout_constraintBottom_toTopOf="@+id/User_emailchange"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/User_name" />

            <TextView
                android:id="@+id/User_emailchange"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="73dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="161dp"
                android:background="@color/blue"
                android:clickable="false"
                android:paddingStart="10dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/User_number"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/User_email" />

            <TextView
                android:id="@+id/User_number"
                android:layout_width="128dp"
                android:layout_height="52dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="286dp"
                android:layout_marginBottom="1dp"
                android:alpha="0.7"
                android:fontFamily="@font/medium"
                android:paddingStart="15dp"
                android:text="Number"
                android:textColor="@color/white"
                android:textSize="30dp"
                app:layout_constraintBottom_toTopOf="@+id/User_numberchange"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/User_emailchange"
                app:layout_editor_absoluteX="20dp" />

            <TextView
                android:id="@+id/User_numberchange"
                android:layout_width="241dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="73dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="173dp"
                android:layout_marginBottom="20dp"
                android:background="@color/blue"
                android:clickable="false"
                android:paddingStart="15dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/User_Address"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/User_number"
                app:layout_editor_absoluteX="20dp"
                app:layout_editor_absoluteY="480dp" />

            <TextView
                android:id="@+id/User_Address"
                android:layout_width="128dp"
                android:layout_height="52dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="284dp"
                android:alpha="0.7"
                android:fontFamily="@font/medium"
                android:paddingStart="15dp"
                android:text="Address"
                android:textColor="@color/white"
                android:textSize="30dp"
                app:layout_constraintBottom_toTopOf="@+id/User_addresschange"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/User_numberchange"
                app:layout_editor_absoluteX="20dp" />

            <TextView
                android:id="@+id/User_addresschange"
                android:layout_width="241dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="73dp"
                android:layout_marginEnd="173dp"
                android:layout_marginBottom="1dp"
                android:background="@color/blue"
                android:clickable="false"
                android:paddingStart="15dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/User_Address"
                app:layout_editor_absoluteX="20dp"
                app:layout_editor_absoluteY="560dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>