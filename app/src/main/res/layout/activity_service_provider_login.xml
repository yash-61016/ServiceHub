<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/welcome_bg"
        android:resizeable="true"
        android:smallScreens="true"
        android:normalScreens="true"
        android:largeScreens="true"
        android:anyDensity="true"
        tools:context=".ServiceProviderLogin">


        <TextView
            android:id="@+id/U_SignUpTitle"
            android:layout_width="370dp"
            android:layout_height="115dp"
            android:layout_marginStart="96dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="96dp"
            android:layout_marginBottom="220dp"
            android:fontFamily="@font/bold"
            android:text="      Sign in as\n Service Provider "
            android:textColor="@color/white"
            android:textSize="48sp"
            app:layout_constraintBottom_toTopOf="@+id/SP_SPLlogin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/SP_SPLlogin"
            android:layout_width="119dp"
            android:layout_height="48dp"
            android:layout_marginStart="119dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="119dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/button"
            android:fontFamily="@font/medium"
            android:gravity="center"
            android:text="Login"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:layout_constraintBottom_toTopOf="@+id/SP_SPLcreateAccount"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/U_SignUpTitle" />

        <Button
            android:id="@+id/SP_SPLcreateAccount"
            android:layout_width="342dp"
            android:layout_height="48dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="26dp"
            android:layout_marginBottom="200dp"
            android:background="@drawable/button"
            android:fontFamily="@font/medium"
            android:gravity="center"
            android:text="@string/create_account"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/SP_SPLlogin" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>